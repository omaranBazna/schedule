<%- include('header') %> 

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Professor</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="add">            
            <form>
              <div class="row">
                <div class="col">
                  <label for="firstName">Professor First Name</label>
                  <input type="text" id="firstName" class="add" placeholder="Enter First Name" />
                </div>
                <div class="col">
                  <label for="lastName">Professor Last Name</label>
                  <input type="text" id="lastName" class="add" placeholder="Enter Last Name" />
                </div>
                <div class="col">
                  <label for="professorType">Type</label>
                  <select id="professorType" class="add">
                    <option value="Full-Time">Full-TIme</option>
                    <option value="Adjacent">Adjacent</option>
                  </select>
                </div>
                <div class="col">
                  <label for="seniority">Seniority</label>
                  <select id="seniority" class="add">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10+">10+</option>
                  </select>
                </div>
              </div>
          
    
            </form>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="container hd-pg justify-content-end">
  <div class="row">
    
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
        Professor Name
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#">Dr. Mina</a>
        <a class="dropdown-item" href="#">Dr. Shadi Bani</a>
        <a class="dropdown-item" href="#">Dr. Mariam</a>
      </div>
    </div>

    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
        Type
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#" onclick="handleClick(this)">In-Person</a>
        <a class="dropdown-item" href="#" onclick="handleClick(this)">Online</a>
        <a class="dropdown-item" href="#" onclick="handleClick(this)">Hybrid</a>
      </div>
    </div>

    <button type="button" class="add-btn btn add btn-primary" data-toggle="modal" data-target="#exampleModal">
      Add Professor
    </button>

  </div>
  <table id="example" class="table table-striped table-bordered" style="width:100%">
      <thead>
          <tr>
            <th>Professor Name</th>
            <th>Type</th>
            <th>Seniority</th>
         
          </tr>
      </thead>
      <tbody>
     
         <% for(let i=0;i<rows.length;i++) {%>
           <tr>
            <td><%=rows[i].Fname%> <%=rows[i].Lname%></td>
            <td><%=rows[i].Professor_Type%></td>
            <td><%=rows[i].Seniority%></td>
          
           </tr>

         <%}%>
          
          <!-- Add more rows as needed -->
      </tbody>
  </table>
</div>

<script>
  // Initialize DataTable
  $(document).ready(function() {
      $('#example').DataTable();
  });

  let clickedText = '';

  // Function to handle the click event
  function handleClick(element) {
    // Get the text content of the clicked anchor tag
    clickedText = element.textContent;

    // Display the text content in the console (you can do something else with it)
    console.log('Clicked Text:', clickedText);
    document.getElementById('example_filter').querySelector('[aria-controls="example"]').value = clickedText;
  }
</script>

<%- include('footer') %> 