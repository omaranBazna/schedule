<%- include('header') %> 

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Availability</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="add">            
            <form>
              <div class="row">
                <div class="col">
                  <label for="professor">Professor</label>
                  <select id="professor" class="add">
                    <option value="shadi">Dr. Shadi Ban</option>
                    <option value="johnson">Dr. Johnson</option>
                  </select>
                </div>

                <div class="col">
                  <label for="professor">Course</label>
                  <select id="professor" class="add">
                    <option value="shadi">Software Engineering</option>
                    <option value="johnson">Information Systems</option>
                  </select>
                </div>

                <div class="col">
                  <label for="AvailabilityType">Availability Type</label>
                  <select id="AvailabilityType" class="add">
                    <option value="Online">Online</option>
                    <option value="In-person">In-person</option>
                    <option value="Asynchronous">Asynchronous</option>
                  </select>
                </div>

                
              </div>

              <div class="row">
                <div class="col">
                  <label for="weekday">Week Day</label>
                  <select id="weekday" class="add">
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                  </select>
                </div>

                <div class="col">
                  <label for="courseMajor">Start Time</label>
                  <input type="time" id="courseCredits" class="add" placeholder="Enter Start Time" />
                </div>

                <div class="col">
                  <label for="courseMajor">Enter Duration</label>
                  <select id="courseMajor" class="add">
                    <option value="Monday">1 hr</option>
                    <option value="Tuesday">1:15 hr</option>
                    <option value="Wednesday">1:30 hr</option>
                    <option value="Thursday">1:45 hr</option>
                    <option value="Friday">2 hr</option>
                  </select>
                </div>
                  <!-- 1 hr
                  1:15 hr
                  1:30 hr
                  1:45 hr
                  2 hr -->
                

              </div>
          
            </form>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



